@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/Admin/Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Feature Ekleme Formu</h5>

        <form method="post">
            <!-- Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Başlık</label>
                <input type="text" asp-for="Title" class="form-control" placeholder="Feature başlığını giriniz" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- MainTitle -->
            <div class="mb-3">
                <label asp-for="MainTitle" class="form-label">Ana Başlık</label>
                <input type="text" asp-for="MainTitle" class="form-control" placeholder="Ana başlığı giriniz" />
                <span asp-validation-for="MainTitle" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Feature açıklamasını giriniz"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- VideoUrl -->
            <div class="mb-3">
                <label asp-for="VideoUrl" class="form-label">Video URL</label>
                <input type="text" asp-for="VideoUrl" class="form-control" placeholder="Örn: https://youtube.com/embed/..." />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>

            <!-- ImageUrl -->
            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">Resim URL</label>
                <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Örn: /images/feature.jpg"
                       oninput="document.getElementById('previewImg').src = this.value" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Resim Önizleme -->
            <div class="mb-3">
                <img id="previewImg" src="@Model.ImageUrl" class="img-thumbnail" style="max-height:200px;" />
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-success">Feature Ekle</button>
            <a asp-action="Index" asp-controller="Feature" class="btn btn-danger">İptal</a>
        </form>
    </div>
</div>

