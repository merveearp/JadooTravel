@model List<ResultTestimonialDto>
@{
    Layout = "~/Views/Admin/Layout.cshtml";
}

<h4 class="mb-3">Müşteri Yorum & Görüş Listesi</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Resim</th>
            <th>Ad Soyad</th>
            <th>Yorum</th>
            <th>Şehir</th>
            <th>Ülke</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageURL" alt="@item.FullName" style="width:80px; height:80px; object-fit:cover; border-radius:50%;" />
                </td>
                <td>@item.FullName</td>
                <td>@item.Comment</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>
                    <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success btn-sm">Güncelle</a>
                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Testimonial/CreateTestimonial" class="btn btn-info mt-3">Yeni Müşteri Yorumu Ekle</a>
